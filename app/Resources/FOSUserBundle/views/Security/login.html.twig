{% extends "@FOSUser/layout.html.twig" %}

{% block fos_user_content %}
    {% trans_default_domain 'FOSUserBundle' %}

    {% if error %}
        <div xmlns="http://www.w3.org/1999/html">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="row " style="margin-top: 20px;">

        <div class="col-md-3" ></div>

        <div class="col-md-6 " style="background-color: #DDD; padding-top: 20px; padding-bottom: 20px; border-radius: 10px;" >

            <form action="{{ path("fos_user_security_check") }}" method="post">

                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}

                <div class="form-group">
                    <label ><h2>Me connecter</h2></label>
                </div>

                <div class="form-group">
                    <label for="username">Nom d'utilisateur</label>
                    <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required"  placeholder="Nom d'utilisateur" />
                </div>
                <div class="form-group">
                    <label for="username">Mot de Passe</label>
                    <input type="password" class="form-control" id="password" name="_password" required="required"  placeholder="Mot de Passe" />
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <label class="form-check-label">
                            <input type="checkbox" class="form-check-input" id="remember_me" name="_remember_me" value="on" >
                            Se souvenir de moi
                        </label>
                    </div>
                </div>
                <button class="btn btn-lg btn-success " type="submit" id="_submit" name="_submit" style="padding-right: 30px; padding-left: 30px;"/>
                    Connexion
                </button>
            </form>
            <div class="pull-right"><a href="/"><button type="button" class="btn btn-primary btn-lg">Retour Ã  l'accueil !</button></a></div>
        </div>
    </div>

{% endblock fos_user_content %}